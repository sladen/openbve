#!/usr/bin/make -f
export DH_VERBOSE=15
BUILDDIRS = openBVE/OpenBve
TARGET = debian/tmp

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: build-stamp
build-stamp: configure-stamp 
	dh_testdir
	for builddir in $(BUILDDIRS); do \
	  (cd $$builddir && xbuild) || exit 1; \
	done
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -rf $(TARGET)
	for builddir in $(BUILDDIRS); do \
	  (cd $$builddir && echo "**NOT doing" xbuild /t:Clean); \
	done
	rm -rf openBVE/OpenBve/bin/
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs
	install -m 755 $(CURDIR)/openBVE/OpenBve/bin/Debug/OpenBve.exe $(TARGET)/usr/lib/openbve/
	install -m 644 $(CURDIR)/openBVE/OpenBve/bin/Debug/OpenBve.exe.mdb $(TARGET)/usr/lib/openbve/
	install -m 755 -T $(CURDIR)/debian/openbve.wrapper $(TARGET)/usr/games/openbve

binary-arch:
	# Do nothing

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_desktop
        dh_installmenu
	dh_install
	dh_installcligac
	dh_installchangelogs
	dh_installdocs
	dh_clifixperms
	dh_installman
	dh_fixperms
	dh_installdeb
	dh_makeclilibs -i -V
	#dh_installcligac -i
	dh_clideps -i
	dh_clideps -d
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep
.PHONY: build clean binary-indep binary install configure
